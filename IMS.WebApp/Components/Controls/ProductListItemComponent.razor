@inject NavigationManager NavigationManager
@inject IDeleteProductUseCase DeleteProductUseCase
@if (Product is not null)
{
    <tr>
        <td>@Product.ProductName</td>
        <td>@Product.Quantity</td>
        <td>@Product.Price.ToString("c")</td>
        <td>
            <a href="/editproduct/@Product.ProductId" class="btn btn-light">
                Edit
            </a>
        </td>
        <td>
           <button type="button" 
               class="btn btn-light"
               @onclick="async () => {HandleDelete(Product.ProductId); }">Delete</button>
        </td>
    </tr>
}
@code {
    [Parameter]
    public Product? Product { get; set; }

    private async void HandleDelete(int productId)
    {
        await DeleteProductUseCase.ExecuteAsync(productId);
        this.Product = null;
    }
}
